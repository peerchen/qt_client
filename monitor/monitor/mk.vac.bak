#Makefile for test
# AIX version

.SUFFIXES:
.SUFFIXES: .cpp .obj .o


INCBASE = $(HOME)/include

BU_INC= -I$(INCBASE) -I$(INCBASE)/kernel -I$(INCBASE)/dbpub  -I$(INCBASE)/xml



CPP = xlC_r 
CPPFLAGS = -g -qrtti=all -qcpluscmt -O2
CPPDEFS = -DAIX -DUNIX -DNDEBUG  -D_THREAD_SAFE

.cpp.o:
	$(CPP) $(CPPFLAGS) -c  $(CPPDEFS) $(BU_INC) $< -o $@

OBJL =     KVNode.o  KvData.o  LinkThread.o  MoniRun.o    Resource.o  SocketInfo.o  SocketMgr.o   main.o

ALL:  monitor clean



BCCLIB = -L$(HOME)/lib   $(LIBDESTPATH)/libbf_kernel.so -lpthread -ldl

monitor: $(OBJL)
	$(CPP) $(CPPFLAGS) $(CPPDEFS) -o $@ $(OBJL) $(BU_INC) -L$(HOME)/lib    $(CPPDEFS) $(BCCLIB)
	mv $@ $(HOME)/bin
clean:
	rm -f *.o

